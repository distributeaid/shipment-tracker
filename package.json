{
  "name": "distribute-aid",
  "version": "1.0.0",
  "description": "We distribute aid.",
  "main": "index.js",
  "scripts": {
    "predev": "yarn codegen",
    "dev:server": "ts-node-dev --no-notify --respawn --transpile-only src/server",
    "dev": "npm-run-all --parallel dev:server codegen:watch",
    "start": "./node_modules/.bin/nodemon --optimize_for_size --max_old_space_size=920 --gc_interval=100 dist/server.js",
    "clean": "rm -rf dist",
    "build": "yarn --silent run clean && graphql-codegen && tsc",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "heroku-postbuild": "yarn build && npx sequelize-cli db:migrate && cd frontend && yarn install --frozen-lockfile && yarn build:styles && yarn build",
    "test": "jest --detectOpenHandles --runInBand",
    "test-ci": "DB_ENV=ci jest --detectOpenHandles --runInBand",
    "prepare": "husky install",
    "migrate-db": "npx sequelize-cli db:migrate"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">= 1.22.5"
  },
  "keywords": [],
  "author": "Distribute Aid",
  "license": "(ISC OR GPL-3.0)",
  "dependencies": {
    "@graphql-tools/utils": "8.2.2",
    "@sinclair/typebox": "0.20.5",
    "ajv": "8.6.2",
    "ajv-formats": "2.1.1",
    "apollo-server": "3.3.0",
    "apollo-server-express": "3.3.0",
    "bcrypt": "5.0.1",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "cookie-parser": "1.4.5",
    "cors": "2.8.5",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "graphql": "15.5.1",
    "graphql-depth-limit": "1.1.0",
    "graphql-import-node": "0.0.4",
    "graphql-scalars": "1.10.0",
    "lodash": "4.17.21",
    "nodemon": "2.0.12",
    "passport": "0.4.1",
    "passport-cookie": "1.0.9",
    "pg": "8.7.1",
    "reflect-metadata": "0.1.13",
    "sequelize": "6.6.2",
    "sequelize-typescript": "2.1.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@distributeaid/shared-config": "distributeaid/shared-config",
    "@graphql-codegen/add": "3.1.0",
    "@graphql-codegen/typescript": "2.2.1",
    "@graphql-codegen/typescript-operations": "2.1.3",
    "@graphql-codegen/typescript-react-apollo": "3.1.3",
    "@graphql-codegen/typescript-resolvers": "2.2.0",
    "@types/bcrypt": "5.0.0",
    "@types/body-parser": "1.19.1",
    "@types/compression": "1.7.2",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.13",
    "@types/graphql-depth-limit": "1.1.2",
    "@types/jest": "27.0.1",
    "@types/lodash": "4.14.172",
    "@types/node": "16.7.6",
    "@types/passport": "1.0.7",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.1",
    "@types/validator": "13.6.3",
    "@types/ws": "7.4.7",
    "graphql-tag": "2.12.5",
    "husky": "7.0.2",
    "jest": "27.1.1",
    "jest-extended": "0.11.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "prettier-plugin-organize-imports": "2.3.3",
    "pretty-quick": "3.1.1",
    "sequelize-cli": "6.2.0",
    "supertest": "6.1.6",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "ts-node-dev": "1.1.8",
    "typescript": "4.4.2"
  }
}
