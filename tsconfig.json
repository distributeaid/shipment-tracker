{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES6"
  },
  "include": ["src/**/*", "cli/**/*", "db/migrations/**/*"]
}
